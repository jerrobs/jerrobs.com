---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Tag from "@components/Tag.astro";
import Datetime from "@components/Datetime";
import type { CollectionEntry } from "astro:content";

export interface Props {
  issue: CollectionEntry<"issue">;
}

const { issue } = Astro.props;

const { title, description, pubDatetime, tags } = issue.data;

const { Content } = await issue.render();

// const ogUrl = new URL(ogImage ? ogImage : `${title}.svg`, Astro.url.origin)
//   .href;
---

<Layout title={title} description={description}>
  <Header />
  <div class="mx-auto flex w-full max-w-3xl justify-start px-2">
    <button
      class="focus-outline mt-8 mb-2 flex hover:opacity-75"
      onclick="history.back()"
    >
      <svg xmlns="http://www.w3.org/2000/svg"
        ><path
          d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"
        ></path>
      </svg><span>Go back</span>
    </button>
  </div>
  <main id="main-content">
    <h1 class="issue-title">{title}</h1>
    <Datetime datetime={pubDatetime} size="lg" className="my-2" />
    <issue id="issue" role="issue" class="prose mx-auto mt-8 max-w-3xl">
      <Content />
    </issue>

    <ul class="tags-container">
      {tags.map(tag => <Tag name={tag} />)}
    </ul>
  </main>
  <Footer />
</Layout>

<style>
  main {
    @apply mx-auto w-full max-w-3xl px-4 pb-12;
  }
  .issue-title {
    @apply text-2xl font-semibold text-skin-accent;
  }
  .tags-container {
    @apply my-8;
  }
</style>
