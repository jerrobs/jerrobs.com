---
import Layout from "@layouts/Layout.astro"
import Header from "@components/Header.astro"
import Footer from "@components/Footer.astro"

import type { CollectionEntry } from "astro:content"

export interface Props {
  reference: CollectionEntry<"reference">
}

const { reference } = Astro.props

const { Content } = await reference.render()
---

<Layout>
  <Header />
  <div class="mx-auto flex w-full max-w-3xl justify-start px-2">
    <button
      class="focus-outline mt-8 mb-2 flex hover:opacity-75"
      onclick="history.back()"
    >
      <svg xmlns="http://www.w3.org/2000/svg"
        ><path
          d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"
        ></path>
      </svg><span>Go back</span>
    </button>
  </div>
  <main id="main-content">
    <article class="prose mx-auto mt-8 max-w-3xl">
      <Content />
    </article>
  </main>
  <Footer />
</Layout>

<style>
  main {
    @apply mx-auto w-full max-w-3xl px-4 pb-12;
  }
  .reference-title {
    @apply text-xxl font-semibold text-skin-accent;
  }
  .tags-container {
    @apply my-8;
  }
</style>
