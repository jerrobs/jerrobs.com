---
import Layout from "@layouts/Layout.astro"
import Header from "@components/Header.astro"
import IssueList from "@components/IssuesList.astro"
import Footer from "@components/Footer.astro"

import { getIssues } from "@utils/getIssues"

const issues = await getIssues()
const featuredIssues = issues
---

<Layout>
  <section id="masthead" class="md">
    <div class="masthead__title body-xxl uppercase italic">
      Journal of <strong>Erratic&nbsp;Observations</strong>
    </div>
    <div class="masthead__tagline body-xl uppercase italic">
      <strong>observed</strong>, <strong>documented</strong>, and <strong
        >peer-reviewed</strong
      > by&nbsp;<strong>Dirk&nbsp;Rathje</strong>&nbsp;in&nbsp;Hamburg
    </div>
  </section>

  <!-- <p class="md large">
        J.Err.Obs., the Journal of Erratic Observations, publishes mini-reviews,
        experimental and observational studies, theoretical and computational
        analyses, case analyses, case studies and commentaries.
      </p> -->

  {
    featuredIssues.length > 0 && (
      <section id="featured">
        <IssueList issues={featuredIssues} />
      </section>
    )
  }
</Layout>

<style lang="stylus">

  @media  (max-width: 800px) {
    
    #masthead {
      transform-origin: 0 0 ;
      transform: scale(.5)}
      }


</style>
