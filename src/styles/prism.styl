$translator = {
  '0': '0',
  p: '⟂',
  n: 'n',
  np1: 'n+1',
  np1_2: 'n+1/2',
  np3_2: 'n+3/2',
  p1_2: '1/2'
}

$widh_correction($a)
  if ($a == 'np3_2' || ($a == 'np1_2'))
    margin-right -2ch

  if ($a == 'np1')
    margin-right -1ch

  if ($a == 'n')
    padding-right 0

for $a in 'x' 'E' 'B' 'g' 'u' 'v'
  for $b in 'p' '0' 'n' 'np1' 'np1_2' 'np3_2' 'p1_2'
    $token = $a + $b
    $c = $translator[$b]

    .token.{$token}
      position relative
      visibility hidden
      $widh_correction($b)

      &:after
        position absolute
        top 10%
        left 1em
        display inline-block
        visibility visible
        content s('%s', $c)
        font-size 0.75em
        opacity 0.8

      &:before
        visibility visible
        content s('%s', $a)

        if ($a == 'g')
          content 'γ'
