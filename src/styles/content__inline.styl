.header-anchor
  display none

strong
  font-weight var(--font-weight--bold)

sup, sub
  position relative
  font-size 0.7em

sup
  top -0.6em
  padding-left 0.2em

sub
  top 0.3em
  padding-left 0.1em

em
  font-style italic

kbd
  font-family monospace

abbr
  text-decoration none
  font-weight var(--font-weight--bold)
  font-style italic
