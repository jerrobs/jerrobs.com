
a.md
  color black
  text-decoration none
  // $link()

a.md[href^=http], a.md[href^=mailto]
  position relative

  span
    padding-right $bl(1)

  &:after
    position absolute
    // top 20%
    right $bl(-0.25)
    display inline
    width $bl(1)
    height $bl(0.5)
