$border-top(dbl = 0, $width = 2px, $color = rgba(black, 0.2)) {
  position: relative;

  &:before {
    position: absolute;
    top: $bl(dbl);
    left: 0;
    display: block;
    width: 100%;
    height: $width;
    background-color: $color;
    content: ' ';
  }
}

$border-bottom(dbl = 0, $width = 1px, $color = rgba(black, 0.2)) {
  position: relative;

  &:after {
    position: absolute;
    bottom: $bl(dbl);
    left: 0;
    // z-index 1000
    display: block;
    width: 100%;
    height: $width;
    background-color: $color;
    content: ' ';
  }
}
