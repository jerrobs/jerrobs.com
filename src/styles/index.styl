@import './config/index.styl'
// @import './mixins/index.styl'
@import './reset.styl'
@import './root.styl'

$CONFIG__COLOR()
$CONFIG__TYPOGRAPHY()
$CONFIG__UI()
$CONFIG__LAYOUT--PRINT()
$CONFIG__LAYOUT--SCREEN()

@import './layout__debug.styl'
@import './content__block.styl'
@import './content__inline.styl'
@import './content__table.styl'
// @import './prism.styl'
// @import './print.styl'


html
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  -webkit-print-color-adjust exact

h2.category
  font-family var(--font-family--headings)
  $baselined-typography(body-md)
  $category()

.space-commander-example
  display flex
  flex-direction column

  +mq--gte-md()
    flex-direction row

  .input
    flex 1

    code
      white-space normal
      font-family monospace

  .output
    flex 1

.math
  font-family $FONT-FAMILY--CODE

div.math
  height $bl(1)
  $baselined-typography(math)
  vertical-align bottom
  opacity 1

  p
    top unset
    margin unset
    font-size unset

.content__bibliography
  h2.md
    $baselined-typography(body-md)
    margin-bottom $bl(0)

  ol
    margin-bottom $bl(1)

body
  background linear-gradient(to bottom, hsla(280, 100%, 0, 0.1), hsla(280, 100%, 100%, 0.1) 1px, transparent 1px, transparent), linear-gradient(to bottom, hsla(280, 100%, 0, 0.1), hsla(280, 100%, 100%, 0.1) 1px, transparent 1px, transparent), #fff
  background-size 100% $bl(0.5), 100% $bl(1), 100% 100%

.layout--screen-view
  .page
    min-height 100vh

.toc-item[data-depth='3']
  > a > .toc-item__body
    text-transform uppercase

